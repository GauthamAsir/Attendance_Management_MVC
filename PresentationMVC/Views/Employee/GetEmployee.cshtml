@model DataLayer.EmployeeDetail

@{
    ViewBag.Title = "Employee Detail";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}

<h2>@ViewBag.Title</h2>

<div>

    <div class="form-group card" style="margin-top:42px; padding: 24px; elevation: below; width:fit-content; border-radius: 6px">

        <dl class="dl-horizontal">
            <dt>
                <span class="display-header">
                    @Html.DisplayNameFor(model => model.EmployeeId)
                </span>
            </dt>

            <dd>
                <span class="display-content">
                    @Html.DisplayFor(model => model.EmployeeId)
                </span>
            </dd>

            <dt>
                <span class="display-header">
                    @Html.DisplayNameFor(model => model.FirstName)
                </span>
            </dt>

            <dd>
                <span class="display-content">
                    @Html.DisplayFor(model => model.FirstName)
                </span>
            </dd>

            <dt>
                <span class="display-header">
                    @Html.DisplayNameFor(model => model.LastName)
                </span>
            </dt>

            <dd>
                <span class="display-content">
                    @Html.DisplayFor(model => model.LastName)
                </span>
            </dd>

            <dt>
                <span class="display-header">
                    @Html.DisplayNameFor(model => model.DateOfBirth)
                </span>
            </dt>

            <dd>
                <span class="display-content">
                    @Html.DisplayFor(model => model.DateOfBirth)
                </span>
            </dd>

            <dt>
                <span class="display-header">
                    @Html.DisplayNameFor(model => model.ContactNo)
                </span>
            </dt>

            <dd>
                <span class="display-content">
                    @Html.DisplayFor(model => model.ContactNo)
                </span>
            </dd>

            <dt>
                <span class="display-header">
                    @Html.DisplayNameFor(model => model.Email)
                </span>
            </dt>

            <dd>
                <span class="display-content">
                    @Html.DisplayFor(model => model.Email)
                </span>
            </dd>

            <dt>
                <span class="display-header">
                    @Html.DisplayNameFor(model => model.JobTitle)
                </span>
            </dt>

            <dd>
                <span class="display-content">
                    @Html.DisplayFor(model => model.JobTitle)
                </span>
            </dd>

            <dt>
                <span class="display-header">
                    @Html.DisplayNameFor(model => model.ManagerId)
                </span>
            </dt>

            <dd>
                <span class="display-content">
                    @Html.DisplayFor(model => model.ManagerId)
                </span>
            </dd>

            <dt>
                <span class="display-header">
                    Role
                </span>
            </dt>

            <dd>
                @if (Model.RoleId == 1)
                {
                    <span class="display-content">
                        Admin
                    </span>
                }
                else if (Model.RoleId == 2)
                {
                    <span class="display-content">
                        Manager
                    </span>
                }
                else
                {
                    <span class="display-content">
                        Employee
                    </span>
                }

            </dd>

        </dl>

    </div>

</div>
